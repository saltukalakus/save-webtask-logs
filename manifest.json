{
  "manifest_version": 2,

  "name": "export-webtask-logs",
  "description": "Export Auth0 Webtask Logs",
  "version": "1.0.0",

  "page_action": {
    "permissions": [
      "https://*.webtask.io/*"
    ],
    "default_icon": {
        "16": "images/webtask16.png",
        "32": "images/webtask32.png",
        "48": "images/webtask48.png",
        "128": "images/webtask128.png"
    }
  },
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false 
  },
  "content_scripts": [
    {
    "matches": ["https://*.webtask.io/*"],
    "js": ["thirdParty/jquery-3.5.1.min.js", "content.js"],
    "run_at": "document_idle"
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "background",
    "downloads",
    "https://*.webtask.io/*"
  ]
}
